{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "draft/context", "draft/tradingStore.ts", "draft/demoModeStore.ts", "draft/DemoModeRouter.tsx", "draft/DemoToggle.tsx", "draft/DemoBanner.tsx", "draft/DemoWelcome.tsx", "draft/PortfolioOverview.tsx", "draft/TradeButton.tsx", "draft/features", "draft/data", "draft/stockService.ts", "draft/ExploreStocks.tsx", "draft/MarketOverviewCards.tsx", "draft/Home.tsx", "draft/Portfolio.tsx", "draft/StockDetail.tsx"]
}
